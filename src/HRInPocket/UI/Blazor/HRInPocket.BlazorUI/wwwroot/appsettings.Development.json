{
  ////////////////////////////////////////////////////////////////
  // Настройки для подключения к демонстрационному IdentityServer4
  ////////////////////////////////////////////////////////////////
  "TestDemo": {
    "Authority": "https://demo.identityserver.io/",
    "ClientId": "interactive.public",
    "ResponseType": "code",
    "DefaultScopes": [
      "openid",
      "profile",
      "email",
      "api"
    ]
  },

  /////////////////////////////////////////////////////////////////
  // Настройки для подключения к HRInPoket.IdentityServer
  /////////////////////////////////////////////////////////////////
  "HRInPocket_IdentityServer": {
    "Authority": "https://localhost:10001/",
    "ClientId": "HRInPocket.BlazorUI",
    "RedirectUri": "https://localhost:6001/authentication/login-callback",
    "PostLogoutRedirectUri": "https://localhost:6001",
    "ResponseType": "code",
    "ResponseMode": "query",
    "DefaultScopes": [
      "openid",
      "profile",
      "email",
      "address",
      "roles",
      "position",
      "country"
    ]
  }
}
