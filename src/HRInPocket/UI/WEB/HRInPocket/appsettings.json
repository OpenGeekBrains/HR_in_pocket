{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=localhost;Database=_HR_In_Pocket;Integrated Security=False;User ID=_hr_in_pocket;Password="
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "System": "Warning",
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "===> {Timestamp:HH:mm:ss} [{Level:u3}] {Message:l}{NewLine}{Exception}"
        }
      },
      {
        "Name": "RollingFile",
        "Args": {
          "pathFormat": "wwwroot/Logs/{Date}_log.txt",
          "outputTemplate": "===> {Timestamp:HH:mm:ss} [{Level:u3}] {Message:l}{NewLine}{Exception}",
          "fileSizeLimitBytes": 104857600
        }
      }
    ]
  },
  "AllowedHosts": "*"
}

