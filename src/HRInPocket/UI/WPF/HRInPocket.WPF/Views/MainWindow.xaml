<Window
    x:Class="HRInPocket.WPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="{Binding Title}"
    Width="800"
    Height="450"
    DataContext="{Binding MWViewModel, Source={StaticResource Locator}}"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <DockPanel
            Grid.Row="0"
            Margin="5"
            LastChildFill="True">
            <Button
                Width="70"
                Margin="5"
                Command="{Binding SaveDataToJSONCommand}"
                Content="Сохранить"
                DockPanel.Dock="Right" />
            <Button
                Width="70"
                Margin="5"
                Command="{Binding SearchCommand}"
                Content="{Binding ButtonContent}"
                DockPanel.Dock="Right" />
            <ComboBox
                Width="100"
                Margin="5"
                VerticalContentAlignment="Center"
                DockPanel.Dock="Right"
                IsEnabled="False"
                ItemsSource="{Binding Sites}"
                SelectedIndex="0"
                SelectedItem="{Binding SelectedSite}" />
            <TextBox
                Margin="5"
                IsEnabled="False"
                Text="{Binding KeyWords}" />
        </DockPanel>
        <DockPanel Grid.Row="1" Margin="2">
            <StatusBar DockPanel.Dock="Bottom">
                <StatusBarItem>
                    <TextBlock Text="{Binding Status}" />
                </StatusBarItem>
            </StatusBar>
            <DataGrid ItemsSource="{Binding DataCollection}" AutoGenerateColumns="False" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Path=Name.Name}" Width="Auto">
                        <DataGridTextColumn.Header>
                            <TextBlock Foreground="Black" Text="Название" />
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>
                    <DataGridTextColumn Binding="{Binding Path=Company.Name}" Width="Auto">
                        <DataGridTextColumn.Header>
                            <TextBlock Foreground="Black" Text="Работодатель" />
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>
                    <DataGridTextColumn Binding="{Binding Path=PrefixCompensation}" Width="Auto">
                        <DataGridTextColumn.Header>
                            <TextBlock Foreground="Black" Text="от/до" />
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>
                    <DataGridTextColumn Binding="{Binding Path=CompensationDown}" Width="Auto">
                        <DataGridTextColumn.Header>
                            <TextBlock Foreground="Black" Text="Минимум" />
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>
                    <DataGridTextColumn Binding="{Binding Path=CompensationUp}" Width="Auto">
                        <DataGridTextColumn.Header>
                            <TextBlock Foreground="Black" Text="Максимум" />
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>
                    <DataGridTextColumn Binding="{Binding Path=CurrencyCode}" Width="Auto">
                        <DataGridTextColumn.Header>
                            <TextBlock Foreground="Black" Text="Валюта" />
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>
                    <DataGridTextColumn Binding="{Binding Path=Date}" Width="Auto">
                        <DataGridTextColumn.Header>
                            <TextBlock Foreground="Black" Text="Дата" />
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>
                    <DataGridTextColumn Binding="{Binding Path=ShortDescription}" Width="Auto">
                        <DataGridTextColumn.Header>
                            <TextBlock Foreground="Black" Text="Краткое описание" />
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>
                    <DataGridTextColumn Binding="{Binding Path=VacancyAddress}" Width="Auto">
                        <DataGridTextColumn.Header>
                            <TextBlock Foreground="Black" Text="Расположение" />
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>
                    <DataGridHyperlinkColumn Binding="{Binding Path=Name.Url}" Width="Auto">
                        <DataGridHyperlinkColumn.Header>
                            <TextBlock Foreground="Black" Text="Страница вакансии" />
                        </DataGridHyperlinkColumn.Header>
                    </DataGridHyperlinkColumn>
                    <DataGridHyperlinkColumn Binding="{Binding Path=Company.Url}" Width="Auto">
                        <DataGridHyperlinkColumn.Header>
                            <TextBlock Foreground="Black" Text="Страница работодателя" />
                        </DataGridHyperlinkColumn.Header>
                    </DataGridHyperlinkColumn>
                </DataGrid.Columns>
            </DataGrid>
        </DockPanel>
    </Grid>
</Window>
